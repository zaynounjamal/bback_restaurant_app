<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:contentDescription="TODO"
           android:id="@+id/dinner_id"
           android:layout_width="match_parent"
           android:layout_height="250dp"
           android:scaleType="center"
           android:src="@drawable/dinner"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           />
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:id="@+id/constraintLayout"
           android:background="@drawable/round_bg"
           app:layout_constraintVertical_bias="1"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent">
           <TextView
               android:fontFamily="@font/amita"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/name"
               android:text="@string/product_name"
               android:textColor="@color/white"
               android:layout_marginTop="10dp"
               android:textSize="18sp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintVertical_bias=".15"
               app:layout_constraintHorizontal_bias=".1"
               />

           <ImageView
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginTop="4dp"
               android:layout_marginEnd="9dp"
               android:src="@drawable/ratingbar"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@id/name"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintHorizontal_bias="1"
               android:contentDescription="@string/rating"
               android:id="@+id/rating_image_id"
               />
           <TextView
               android:id="@+id/rating_text_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toStartOf="@+id/rating_image_id"
               app:layout_constraintBottom_toBottomOf="@id/rating_image_id"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:text="@string/rating_count"
               android:layout_margin="5dp"
               app:layout_constraintTop_toTopOf="parent"
               />
           <ImageView
               android:id="@+id/timer_image_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_access_time_24"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/name"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="30dp"
               />
           <TextView
               android:id="@+id/timing"
               android:layout_width="wrap_content"
               android:textStyle="bold"
               android:layout_height="wrap_content"
               android:text="@string/time_of_product"
               android:textColor="@color/white"
               app:layout_constraintBottom_toBottomOf="@id/timer_image_id"
               app:layout_constraintTop_toTopOf="@id/timer_image_id"
               app:layout_constraintStart_toEndOf="@id/timer_image_id"
               android:layout_marginStart="5dp"/>
           <ImageView
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:src="@drawable/dollarsymbol"
               app:tint="@color/purple_500"
               app:layout_constraintTop_toTopOf="@id/price"
               app:layout_constraintBottom_toBottomOf="@id/price"
               app:layout_constraintEnd_toStartOf="@id/price"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="45"
               android:textStyle="bold"
               android:id="@+id/price"
               android:textColor="@color/white"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@+id/timing"
               app:layout_constraintTop_toBottomOf="@+id/rating_text_id"
               app:layout_constraintHorizontal_bias="1"
               android:layout_marginEnd="9dp"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>