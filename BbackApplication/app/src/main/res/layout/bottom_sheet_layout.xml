<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/bottom_sheet_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/order_now"
        android:id="@+id/order_now_text"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/amita"
        />

    <ImageView
        android:id="@+id/remove_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="56dp"
        android:contentDescription="TODO"
        android:src="@drawable/baseline_delete_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_now_text"
        app:layout_constraintBottom_toBottomOf="@id/order_now_text"/>

    <ImageView
        android:visibility="gone"
        android:contentDescription="TODO"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintEnd_toStartOf="@id/remove_img"
        android:layout_marginEnd="7dp"
        android:id="@+id/edit_img"
        app:layout_constraintTop_toTopOf="@id/order_now_text"
        app:layout_constraintBottom_toBottomOf="@id/order_now_text"/>
    <View
        android:layout_width="90dp"
        android:layout_height="3dp"
        android:background="@color/purple_500"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/order_now_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_img"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:contentDescription="@string/detailed_image"
            android:scaleType="centerCrop"
            android:src="@drawable/coffe" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amarante"
                android:text="@string/name"
                android:id="@+id/bottom_name"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"/>

                <ImageView
                    android:id="@+id/fav_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/baseline_favorite_border_24" />
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_description"
                android:fontFamily="@font/amarante"
                android:text="@string/description"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/white"
                android:singleLine="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5_0"
                    android:textStyle="bold"
                    android:id="@+id/bottom_rating"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/time_of_product"
                    android:textStyle="bold"
                    android:id="@+id/bottom_timing"
                    android:textColor="@color/white"

                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintTop_toTopOf="@+id/bottom_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/bottom_price"
                    android:id="@+id/dollar_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dollarsymbol"
                    app:tint="@color/purple_500"/>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dollar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_99"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/bottom_price"/>
                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amarante"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>