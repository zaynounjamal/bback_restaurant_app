<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_20dp">

        <!-- BackButton -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="TODO"
            android:src="@drawable/baseline_arrow_back_ios_2_24"
            android:layout_marginStart="3dp"
            android:id="@+id/SettingsBackArrow"/>

        <!-- Settings Title -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Theme Section -->
    <TextView
        android:id="@+id/tvChangeThemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/display_settings"
        android:fontFamily="@font/amarante"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <!-- Theme Switch -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvChangeTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Theme"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Switch with padding to increase touch target -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <Switch
                android:id="@+id/switchTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </FrameLayout>
    </LinearLayout>

    <!-- Notifications Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notifications"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Switch with padding to increase touch target -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <Switch
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </FrameLayout>
    </LinearLayout>

    <!-- Terms and Conditions Button -->
    <Button
        android:id="@+id/btnTermsAndConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms_and_conditions"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="30dp"/>

    <!-- Clear Cache Button -->
    <Button
        android:id="@+id/btnClearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_cache"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="30dp"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout_Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_marginTop="20dp" />

</LinearLayout>
